<h1>  Crea un nuevo usuario </h1>

<% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert"> Hay errores:
    <% @user.errors.full_messages.each do |error| %>
      <p> <%= error%> </p></div>
    <%end%>
  <% end %>


	<%= form_for @user do |f| %>
		
		<div class="row">
			<div class="col-md-4">
				<%= f.label :name, 'NOMBRE DE USUARIO' %>
  				<%= f.text_field :name, class: 'form-control' %>
  			</div>
  		</div>


		<div class="row">
			<div class="col-md-6">
				<%= f.label :password, 'CONTRASEÃ‘A' %>
  				<%= f.text_field :password, class: 'form-control' %>
  			</div>
  		</div>

    <div class="row">
      <div class="col-md-6">
        <%= f.label :range, 'RANGO: admin, regular, premium' %>
          <%= f.text_field :range, class: 'form-control' %>
        </div>
      </div>


  		<%= f.submit "Crear user", class: 'btn btn-primary' %>



  	</div>
<% end %>