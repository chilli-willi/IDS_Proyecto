<div class="container">
  <div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">


<h1>  Crea una nueva subasta </h1>
<% if current_user.try(:admin?) %>



	<%= form_for @auction do |f| %>
      <div class="form-group">
        <%= f.label :name, 'NOMBRE' %>
        <%= f.collection_select :name, Residence.all, :name , :name ,{}, class: 'form-control'%>
      <p></p>
		  <div>
			  <%= f.label :des, 'DESCRIPCION' %>
  		  <%= f.text_field :des, class: 'form-control' , required: true %>
  		</div>
  		<p></p>
  		<div>
				<%= f.label :monto, 'MONTO' %>
  			<%= f.number_field :monto, class: 'form-control', required: true %>
  			</div>
  		</div>
      <p></p>
  		<div>
				<%= f.label :minimapuja, 'PUJA MINIMA' %>
  			<%= f.number_field :minimapuja, class: 'form-control', required: true %>
  		</div>

      <p></p>

  		<%= f.submit "Crear subasta", class: 'btn btn-primary' %>
      <%= link_to "Volver", auctions_path, class: 'btn btn-primary' %>

  	</div>
<% end %>
<% end %>
  <div class="col-md-3"></div> 
    <%= form_for Auction.new() do |a| %>
    
    <%= a.label :weekdate, 'Semana' %>
    <%= a.week_field :weekdate %>
  <%= a.hidden_field :residence_id, value: params[:id] %>


  <%= a.label :monto, 'Precio inicial' %>
  <%= a.number_field :monto, class: 'form-control', required: true %></p>

<%= a.label :minimapuja, 'Minima puja' %>
  <%= a.number_field :minimapuja, class: 'form-control', required: true %></p>

    <%= a.submit "Crear hotsale", :class=>'btn btn-primary' %>
   <% end %>
   
</div>
</div>