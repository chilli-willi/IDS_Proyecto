<div class="container">
  <div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">


<% if @auction.errors.any? %>
  <h1>hay errores</h1>
  <% @auction.errors.full_messages.each do |error| %>
   <p> <%= error%> </p>
  <%end%>
 <% end %>

<table class="table">
	<thead>
		<tr>
			<th>NOMBRE</th>
			<th>DESCRIPCION</th>
			
			<th>MONTO</th>
				<% if current_user.try(:admin?) %>
			<th>PUJA MINIMA</th>
							<% end %>

		
		</tr>
	</thead>
	<tbody>
		<% @auction.each do |r| %>
			<tr>
				<td><%= r.name %></td>
				<td><%= r.des %></td>
				
			
				<td><%= r.monto %></td>
	<% if current_user.try(:admin?) %>
				<td><%= r.minimapuja %></td>
					<% end %>
				<td><%=link_to 'ver', r, class: 'btn btn-success'%></td>
				<% if current_user.try(:admin?) %>
				<td><%=link_to 'editar', edit_auction_path(r), class: 'btn btn-info'%></td>
				<td><%=link_to 'eliminar', r, method: :delete,  class: 'btn btn-danger', data: { confirm: 'Realmente desea eliminar subasta?'} %>
						<% end %>

				</td>
				<% end %>
			</tr> 
		

	</tbody>
</table>
<% if current_user.try(:admin?) %>
<%= link_to 'Nueva subasta', new_auction_path, class: 'btn btn-primary'%>
<% end %>

  <div class="col-md-3"></div> 

</div>
</div>

