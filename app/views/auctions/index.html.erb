<div class="container">
  <div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">



<table class="table">
	<thead>
		<tr>
			<th>Residencia</th>
			<th>Semana del:</th>
			
			<th>Base</th>
				<% if current_user.try(:admin?) %>
			<th>Puja Minima</th>
							<% end %>

		
		</tr>
	</thead>
	<tbody>
		<% @auction.each do |r| %>
			<tr> <% @r = Residence.find(r.residence_id) %>
        <td> <%=  @r.name  %></td>
				  <% date = DateTime.parse(r.weekdate)%>
         <td><%= date.strftime('%d/%m/%Y')   %></td>
				
				
			
				<td><%= r.monto %></td>
	<% if current_user.try(:admin?) %>
				<td><%= r.minimapuja %></td>
					<% end %>
				<td><%=link_to 'ver', r, class: 'btn btn-success'%></td>
				<% if current_user.try(:admin?) %>
				<td><%=link_to 'editar', edit_auction_path(r), class: 'btn btn-info'%></td>
				<td><%=link_to 'eliminar', r, method: :delete,  class: 'btn btn-danger', data: { confirm: 'Realmente desea eliminar subasta?'} %>
						<% end %>

				</td>
				<% end %>
			</tr> 
		

	</tbody>
</table>

  <div class="col-md-3"></div> 

</div>
</div>

