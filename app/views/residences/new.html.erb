<h1>  Crea una nueva residencia </h1>


<% if @residence.errors.any? %>
		<div class="alert alert-danger">Hay errores
		<% @residence.errors.full_messages.each do |error| %>
			<p> <%= error%> </p>
		<%end%></div>
	<% end %>


	<%= form_for @residence do |f| %>
		
		<div>
			<div>
				<%= f.label :name, 'NOMBRE' %>
  				<%= f.text_field :name, class: 'form-control' %>
  			</div>
  		</div>

      <p></p>
		<div>
			<div>
				<%= f.label :des, 'DESCRIPCION' %>
  				<%= f.text_field :des, class: 'form-control' %>
  			</div>
  		</div>
<p></p>
  		<div>
			<div>
				<%= f.label :location, 'LOCATION (url de imagen por ahora)' %>
  				<%= f.text_field :location, class: 'form-control' %>
  			</div>
  		</div>
      <p></p>
  		<%= f.submit "Crear residencia", class: 'btn btn-primary' %>
  	</div>
<% end %>