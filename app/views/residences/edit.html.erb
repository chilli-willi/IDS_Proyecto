<h1>  Crea una nueva residencia </h1>


	<%= form_for @residence do |f| %>
		
		<div>
			
				<%= f.label :name, 'NOMBRE' %>
  				<%= f.text_field :name, class: 'form-control',required: true %>
  			</div>
  		

  		<p></p>
		<div >
		
				<%= f.label :des, 'DESCRIPCION' %>
  				<%= f.text_field :des, class: 'form-control', required: true %>
  			</div>
  		
<p></p>
   
      <div >
        <%= f.label :location, 'LOCATION (url imagen por ahora)' %>
          <%= f.text_field :location, class: 'form-control', required: true%>
        </div>
     

  		<p></p>
  		<%= f.submit "Editar residencia", class: 'btn btn-primary' %>
      <%= link_to "Volver", residences_path, class: 'btn btn-primary' %>
  	
<% end %>